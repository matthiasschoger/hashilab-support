
plugin_id   = "nfs"
type        = "csi"
id          = "pocket-id"
name        = "PocketID"

capability {
	access_mode = "single-node-writer"
	attachment_mode = "file-system"
}

context {
  server = "storage.home"
  share = "/volume2/homelab-dmz"
  subDir = "pocket-id"
  mountPermissions = "775"  
}

mount_options {
  fs_type = "nfs"
  mount_flags = [ "soft", "nolock", "async"  ]
}

