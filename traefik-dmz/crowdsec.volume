
plugin_id   = "nfs"
type        = "csi"
id          = "crowdsec"
name        = "Crowdsec"

capability {
	access_mode = "single-node-writer"
	attachment_mode = "file-system"
}

context {
  server = "storage.home"
  share = "/volume2/homelab-dmz"
  subDir = "crowdsec/data"
  mountPermissions = "0"  
}

mount_options {
  fs_type = "nfs"
  mount_flags = [ "hard", "sync" ]
}

