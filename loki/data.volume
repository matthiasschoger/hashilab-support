
plugin_id   = "nfs"
type        = "csi"
id          = "loki"
name        = "Loki"

capability {
	access_mode = "single-node-writer"
	attachment_mode = "file-system"
}

context {
  server = "storage.home"
  share = "/volume1/homelab-hdd"
  subDir = "loki"
  mountPermissions = "755"
}

mount_options {
  fs_type = "nfs"
  mount_flags = [ "timeo=30", "vers=4.1", "nolock" ]
}

